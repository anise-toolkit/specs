namespace Anise.Common;

struct Vector3 {
    x: double;
    y: double;
    z: double;
}

// A quaternion is stored as its half-angle (w) as a 64-bit float and its 3-component unit vector first (each component as a 64-bit float).
struct Quaternion {
    w: double;
    x: double;
    y: double;
    z: double;
}

table Constant {
    value:double;
    unit:string;
    comment:string;
}

table ConstantMap {
    keys:[string];
    values:[Constant];
}

enum InterpolationKind:ubyte {
    ChebyshevSeries = 0,
    HermiteSeries = 1,
    LagrangeSeries = 2,
    Polynomial = 3,
    Trigonometric = 4, // Sometimes called Fourier Series interpolation
}